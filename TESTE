    <div class="container">
        <header>
            <h1>Controle de Estoque</h1>
            <p>Sistema de cadastro e gerenciamento de materiais</p>
        </header>
        
        <div class="content">
            <section class="form-section">
                <h2>Cadastrar Novo Material</h2>
                <form id="materialForm">
                    <div class="form-group">
                        <label for="materialName">Nome do Material</label>
                        <input type="text" id="materialName" required placeholder="Ex.: Papel A4, Caneta Azul, etc.">
                    </div>
                    
                    <div class="form-group">
                        <label for="materialCategory">Categoria</label>
                        <select id="materialCategory" required>
                            <option value="">Selecione uma categoria</option>
                            <option value="Escritório">Material de Escritório</option>
                            <option value="Limpeza">Material de Limpeza</option>
                            <option value="Informática">Material de Informática</option>
                            <option value="Elétrico">Material Elétrico</option>
                            <option value="Hidráulico">Material Hidráulico</option>
                            <option value="Outros">Outros</option>
                        </select>
                    </div>
                    
                    <div class="form-row">
                        <div class="form-group">
                            <label for="materialQuantity">Quantidade em Estoque</label>
                            <input type="number" id="materialQuantity" min="0" required placeholder="0">
                        </div>
                        
                        <div class="form-group">
                            <label for="materialMinQuantity">Quantidade Mínima</label>
                            <input type="number" id="materialMinQuantity" min="0" required placeholder="0">
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label for="materialUnit">Unidade de Medida</label>
                        <select id="materialUnit" required>
                            <option value="">Selecione a unidade</option>
                            <option value="Unidade">Unidade</option>
                            <option value="Pacote">Pacote</option>
                            <option value="Caixa">Caixa</option>
                            <option value="Metro">Metro</option>
                            <option value="Litro">Litro</option>
                            <option value="Quilograma">Quilograma</option>
                        </select>
                    </div>
                    
                    <div class="form-group">
                        <label for="materialLocation">Localização no Estoque</label>
                        <input type="text" id="materialLocation" placeholder="Ex.: Prateleira A3, Armário 2, etc.">
                    </div>
                    
                    <div class="form-group">
                        <label for="materialNotes">Observações</label>
                        <textarea id="materialNotes" rows="3" placeholder="Informações adicionais sobre o material"></textarea>
                    </div>
                    
                    <button type="submit">Cadastrar Material</button>
                </form>
            </section>
            
            <section class="list-section">
                <h2>Materiais Cadastrados</h2>
                <div class="material-list" id="materialList">
                    <div class="empty-list">Nenhum material cadastrado ainda</div>
                </div>
            </section>
        </div>
    </div>

    <script>
        document.getElementById('materialForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            // Obter valores do formulário
            const name = document.getElementById('materialName').value;
            const category = document.getElementById('materialCategory').value;
            const quantity = parseInt(document.getElementById('materialQuantity').value);
            const minQuantity = parseInt(document.getElementById('materialMinQuantity').value);
            const unit = document.getElementById('materialUnit').value;
            const location = document.getElementById('materialLocation').value;
            const notes = document.getElementById('materialNotes').value;
            
            // Criar elemento de material
            const materialItem = document.createElement('div');
            materialItem.className = quantity <= minQuantity ? 'material-item low-stock' : 'material-item';
            
            materialItem.innerHTML = `
                <div class="material-header">
                    <span class="material-name">${name}</span>
                    <span class="material-category">${category}</span>
                </div>
                <div class="material-details">
                    <div><strong>Quantidade:</strong> ${quantity} ${unit}</div>
                    <div><strong>Mínimo:</strong> ${minQuantity} ${unit}</div>
                    <div><strong>Localização:</strong> ${location || 'Não informada'}</div>
                    <div><strong>Status:</strong> ${quantity <= minQuantity ? 'Estoque Baixo' : 'Estoque OK'}</div>
                </div>
                ${notes ? `<div style="margin-top: 10px; font-size: 13px;"><strong>Observações:</strong> ${notes}</div>` : ''}
            `;
            
            // Adicionar à lista (substituir mensagem vazia se for o primeiro item)
            const materialList = document.getElementById('materialList');
            if (materialList.querySelector('.empty-list')) {
                materialList.innerHTML = '';
            }
            
            materialList.prepend(materialItem);
            
            // Limpar formulário
            document.getElementById('materialForm').reset();
            
            // Feedback visual
            const button = document.querySelector('button');
            const originalText = button.textContent;
            button.textContent = 'Material Cadastrado!';
            button.style.background = 'linear-gradient(to right, #27ae60, #2ecc71)';
            
            setTimeout(() => {
                button.textContent = originalText;
                button.style.background = 'linear-gradient(to right, #2c3e50, #4ca1af)';
            }, 2000);
        });
    </script>
</body>
